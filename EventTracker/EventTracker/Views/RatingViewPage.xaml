<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:customcontrol="clr-namespace:ChatBot.Controls"
             xmlns:ViewModels="clr-namespace:ChatBot.ViewModels;assembly=ChatBot" xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls"
             mc:Ignorable="d"
             x:Class="ChatBot.Views.RatingViewPage"
             Title="Đánh Giá Dịch Vụ">
    <ContentPage.BindingContext>
        <ViewModels:RattingBarViewModal />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Start" 
                         Orientation="Vertical"
                         HorizontalOptions="Start">
                <Frame HorizontalOptions="Center"
                       CornerRadius="10"
                       BackgroundColor="White"
                       HasShadow="True"
                        Margin="10"
                       Padding="10">
                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Vertical" >
                            <Label Text="Cảm ơn bạn đã sử dụng dịch vụ của chúng tối." 
                                    HorizontalTextAlignment="Start"
                                   FontSize="20"
                                   TextColor="Black"/>
                            <Label Text="Hãy đánh giá để chúng tối có thể cải thiện dịch vụ có thể phục vụ bạn tốt hơn nữa!" 
                                    HorizontalTextAlignment="Start"
                                   FontSize="15"
                                   TextColor="DarkCyan"/>
                            <customcontrol:RattingBarRating 
                                    x:Name="customRattingBar"
                                    HorizontalOptions="Center"  
                                    ImageWidth="45" 
                                    ImageHeight="45"    
                                    Command="{Binding rattingBarCommand}"
                                    SelectedStarValue="3"  
                                    FillStarImage="icfillstar"
                                    EmptyStarImage="icemptystar"   />
                            <BoxView VerticalOptions="CenterAndExpand"
                                     BackgroundColor="Black"
                                     HeightRequest="0.5"
                                     Margin="50,10" />
                            <Label Text="{Binding SelectedStar}"  
                                   HorizontalTextAlignment="Center" 
                                   FontSize="16"
                                   TextColor="Black"
                                   FontAttributes="Italic"/>
                        </StackLayout>

                        <!--Chọn đánh giá-->
                        <Frame BorderColor="WhiteSmoke">
                            <input:SelectionView
                            Color="Orange"
                            BackgroundColor="WhiteSmoke"
                                x:Name="selectionView"
                                ColumnNumber="2"
                                ColumnSpacing="5"
                                ItemDisplayBinding="{Binding Name}"
                                ItemsSource="{Binding MyList}"
                                RowSpacing="10"
                                Padding="20"
                                SelectionType="MultipleButton"/>
                        </Frame>
                        
                        <StackLayout Orientation="Vertical">
                            <Label Text="Chia sẻ ý kiến của bạn tại đây!"
                                   FontSize="13"
                                   TextColor="Black"/>
                            <Editor Placeholder="Góp ý."
                                    HeightRequest="70"
                                    FontSize="12"
                                    TextColor="Gray"
                                    Text="{Binding SelectedCustomers.noiDungDanhGia, Mode=TwoWay}"/>
                        </StackLayout>
                    </StackLayout> 
                </Frame>

                <Frame  
                       CornerRadius="5"
                       BackgroundColor="White"
                       HasShadow="True"
                       Margin="5">
                    <StackLayout Orientation="Horizontal" >
                        <Image Source="banner.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           Aspect="AspectFill"
                           HorizontalOptions="Start"/>
                        <BoxView WidthRequest="1"
                             BackgroundColor="Black"/>
                        <StackLayout Orientation="Vertical" 
                             HorizontalOptions="CenterAndExpand"
                                 VerticalOptions="Center">
                            <Label Text="Hệ Thống CSKH" 
                                    HorizontalTextAlignment="Start"
                                   FontSize="17"
                                   TextColor="Black"
                                   FontAttributes="Italic"/> 
                        </StackLayout>
                    </StackLayout>

                </Frame>
               
