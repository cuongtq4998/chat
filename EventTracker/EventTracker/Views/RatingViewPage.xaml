                <customcontrol:ButtonWithPadding Grid.Row="1"
                                        VerticalOptions="EndAndExpand"
                                        BackgroundColor="Orange"
                                        Margin="28,10,28,10"
                                        CornerRadius="60" 
                                        TextColor="White"
                                        FontSize="20" 
                                         Command="{Binding AddInforCus}" 
                                        CommandParameter="{x:Reference Name=customRattingBar}"
