                                           FontSize="13" />
                                    <Label Text="{Binding thoI_GIAN, Mode=TwoWay}" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>-->

            </ListView>
        </RefreshView>
    </StackLayout>
</ContentPage>